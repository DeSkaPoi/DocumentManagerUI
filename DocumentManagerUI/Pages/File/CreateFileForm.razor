    </div>

    <div class="subButtom Foorm py-2 marginSave">
        <Button id="12" Type="ButtonType.Submit" Color="Color.Dark" Loading="isLoading">
            <LoadingTemplate>
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Saving...
            </LoadingTemplate>
            <ChildContent>
                Save
            </ChildContent>
        </Button>
    </div>
</EditForm>


<Modal @ref="modalRef">
    <ModalContent Centered>
        <ModalHeader>
            <ModalTitle>Employee edit</ModalTitle>
            <CloseButton />
        </ModalHeader>
        <ModalBody>
            @ErrorMessage
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="@HideModal">Close</Button>
        </ModalFooter>
    </ModalContent>
</Modal>



@code {

    [Parameter]
    public FileResponse File { get; set; }
    public Modal modalRef { get; set; }

    bool isLoading = false;
    string ErrorMessage = "";

    enum Size
    {
        KB = 1,
        Mb,
        Gb
    }

    async Task OnProgressed(FileProgressedEventArgs e)
    {
        Console.WriteLine($"File: {e.File.Name} Progress: {e.Percentage}");
    }

    private Task HideModal()
    {
        return modalRef.Hide();
    }

    private Task ShowModal(string message)
    {
        ErrorMessage = message;
        return modalRef.Show();
    }

    protected async Task OnChange(FileChangedEventArgs e)
    {
        try
        {
            long maxFileSize = 1024 * 1024 * 100;

            foreach (var file in e.Files)
            {
                using (var stream = new MemoryStream())
                {
                    await file.WriteToStreamAsync(stream);
                    stream.Seek(0, SeekOrigin.Begin);
                    File.Size = ConvertingValueFromBytes(file.Size, 0);
                    File.FileObject = new FileObjectResponse(file.Name, stream.ToArray(), file.Type);

                    if (File.FileObject == null)
                    {
                        throw new Exception("Mutable object not found");
                    }
                }
                

                
                /*using var fileContent = file.OpenReadStream(maxFileSize);
                using var ms = new MemoryStream();
                await fileContent.CopyToAsync(ms);*/

           
                
            }
        }
        catch (Exception ex)
        {
            ShowModal(ex.Message);
        }
        
    }

    private async Task PostFileObject()
    {
        try
        {
            this.File.CreationTime = DateTime.Now;
            this.File.LastUpDate = DateTime.Now;
            var response = await Http.PostAsJsonAsync($"https://localhost:44339/api/FileDescription/", File);

            if (!response.IsSuccessStatusCode)
            {
                throw new Exception("Error - 500. Internal Server Error - Post");
            }

            var idfile = await response.Content.ReadAsStringAsync();
            idfile = idfile.Trim('"');
            var statusInfo = await Http.PostAsJsonAsync($"https://localhost:44339/api/FilePayload/file/{idfile}", File.FileObject);
            if (!statusInfo.IsSuccessStatusCode)
            {
                await Http.DeleteAsync($"https://localhost:44339/api/FileDescription/{idfile}");
                throw new Exception("Error - 500. Internal Server Error - Post");
            }

        }
        catch (Exception e)
        {
            ShowModal(e.Message);
        }
        
    }

    string ConvertingValueFromBytes(double size, int i)
    {
        if (size / 1024 > 1)
        {
            return ConvertingValueFromBytes(size / 1024, ++i);
        }
        else
        {
            return $"{Math.Round(size, 2)} {(Size)i}";
        }
    }

}
